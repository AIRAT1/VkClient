<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="48dp">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Date"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:lines="1"
        android:textColor="#909090"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/rl_comments"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_date"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_comments_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:lines="1"
            android:text="@string/font_comment"
            android:textColor="@color/colorIcon"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1488"
            android:layout_alignTop="@id/tv_comments_icon"
            android:layout_toEndOf="@id/tv_comments_icon"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textColor="#909090"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_reposts"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rl_comments"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_reposts_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:lines="1"
            android:text="@string/font_repost"
            android:textColor="@color/colorIcon"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_reposts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1488"
            android:layout_alignTop="@id/tv_reposts_icon"
            android:layout_toEndOf="@id/tv_reposts_icon"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textColor="#909090"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_likes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_likes_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:lines="1"
            android:text="@string/font_heart"
            android:textColor="@color/colorIcon"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1488"
            android:layout_alignTop="@id/tv_likes_icon"
            android:layout_toEndOf="@id/tv_likes_icon"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textColor="#909090"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorDivider"/>

</RelativeLayout>